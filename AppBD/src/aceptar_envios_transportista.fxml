<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="AceptarEnviosTransportistaController">

    <left>
        <AnchorPane prefHeight="600.0" prefWidth="180.0" style="-fx-background-color: #263F73;" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="btnVolver" layoutX="20.0" layoutY="20.0" onAction="#onVolverMenuTransportista" prefHeight="26.0" prefWidth="80.0" style="-fx-background-color: transparent;                                -fx-text-fill: white;                                -fx-border-color: transparent;" text="Volver" />

                <Label layoutX="35.0" layoutY="102.0" text="Nuevos envíos" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>
    </left>

    <center>
        <AnchorPane prefHeight="600.0" prefWidth="540.0" BorderPane.alignment="CENTER">
            <children>

                <Label layoutX="30.0" layoutY="20.0" text="Envíos disponibles para aceptar">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>

                <TableView fx:id="tableEnviosDisponibles" layoutX="20.0" layoutY="60.0" prefHeight="400.0" prefWidth="560.0">
                    <columns>
                        <TableColumn fx:id="colId" prefWidth="60.0" text="ID" />
                        <TableColumn fx:id="colDestino" prefWidth="150.0" text="Destino" />
                        <TableColumn fx:id="colEstado" prefWidth="100.0" text="Estado" />
                        <TableColumn fx:id="colPrecio" prefWidth="100.0" text="Tarifa est." />
                        <TableColumn fx:id="colDescripcion" prefWidth="150.0" text="Descripción" />
                    </columns>
                </TableView>

                <Button fx:id="btnAceptarEnvio" layoutX="20.0" layoutY="480.0" onAction="#onAceptarEnvio" prefHeight="26.0" prefWidth="160.0" text="Aceptar envío" />

                <Button fx:id="btnOcultarEnvio" layoutX="200.0" layoutY="480.0" onAction="#onOcultarEnvio" prefHeight="26.0" prefWidth="160.0" text="Ocultar envío" />

            </children>
        </AnchorPane>
    </center>
</BorderPane>
