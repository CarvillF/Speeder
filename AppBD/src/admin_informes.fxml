<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="AdminInformesController"
            style="-fx-background-color: linear-gradient(to bottom right, #020617, #0b1120);">

    <top>
        <AnchorPane prefHeight="70.0"
                    style="-fx-background-color: linear-gradient(to right, #20273E, #263F73);"
                    BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="btnVolverAdmin"
                        layoutX="20.0" layoutY="20.0"
                        prefHeight="30.0" prefWidth="100.0"
                        text="⮐  Volver"
                        textFill="WHITE"
                        onAction="#onVolverAdmin"
                        style="-fx-background-color: transparent;
                               -fx-border-color: transparent;
                               -fx-focus-color: transparent;
                               -fx-faint-focus-color: transparent;" />
                <Label layoutX="220.0" layoutY="18.0"
                       text="Informes del sistema"
                       textFill="WHITE">
                    <font>
                        <Font name="Arial Black" size="20.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>
    </top>

    <center>
        <AnchorPane BorderPane.alignment="CENTER">
            <children>
                <VBox spacing="14.0" alignment="CENTER"
                      layoutX="230.0" layoutY="80.0"
                      prefWidth="440.0"
                      style="-fx-background-color: rgba(15,23,42,0.96);
                             -fx-background-radius: 20;
                             -fx-padding: 24;">
                    <children>
                        <Label text="Selecciona un informe para generar el PDF"
                               textFill="#E5E7EB">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>

                        <Button fx:id="btnInformeEnviosMensuales"
                                text="Informe de envíos mensuales"
                                prefWidth="320.0" prefHeight="32.0"
                                onAction="#onInformeEnviosMensuales" />

                        <Button fx:id="btnInformeEmpresarios"
                                text="Informe de empresarios de la plataforma"
                                prefWidth="320.0" prefHeight="32.0"
                                onAction="#onInformeEmpresarios" />

                        <Button fx:id="btnInformeTransportistas"
                                text="Informe de transportistas"
                                prefWidth="320.0" prefHeight="32.0"
                                onAction="#onInformeTransportistas" />

                        <Button fx:id="btnInformeFlujoEmpresa"
                                text="Informe de flujo de la empresa"
                                prefWidth="320.0" prefHeight="32.0"
                                onAction="#onInformeFlujoEmpresa" />

                        <Button fx:id="btnInformeHistoricoPaquetes"
                                text="Informe histórico de paquetes"
                                prefWidth="320.0" prefHeight="32.0"
                                onAction="#onInformeHistoricoPaquetes" />
                    </children>
                </VBox>
            </children>
        </AnchorPane>
    </center>

</BorderPane>