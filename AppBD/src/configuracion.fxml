<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ConfiguracionController"
            prefHeight="600.0" prefWidth="800.0">

    <left>
        <AnchorPane prefHeight="600.0" prefWidth="260.0"
                    style="-fx-background-color: #263F73;"
                    BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="btnVolverMenu"
                        layoutX="20.0" layoutY="20.0"
                        text="Volver"
                        onAction="#onVolverMenuUsuario"
                        style="-fx-background-color: transparent;
                               -fx-text-fill: white;
                               -fx-border-color: transparent;" />

                <Label layoutX="30.0" layoutY="70.0"
                       text="Menú de configuración"
                       textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>

                <Button fx:id="btnCambiarUsuario"
                        layoutX="22.0" layoutY="130.0"
                        prefHeight="26.0" prefWidth="215.0"
                        text="Cambiar campos de usuario"
                        onAction="#onCambiarUsuario"
                        style="-fx-background-color: transparent;
                               -fx-text-fill: white;
                               -fx-border-color: transparent;" />

                <Button fx:id="btnCambiarEmprendimiento"
                        layoutX="22.0" layoutY="170.0"
                        prefHeight="26.0" prefWidth="215.0"
                        text="Cambiar campos de emprendimiento"
                        onAction="#onCambiarEmprendimiento"
                        style="-fx-background-color: transparent;
                               -fx-text-fill: white;
                               -fx-border-color: transparent;" />

                <Button fx:id="btnGestionPago"
                        layoutX="22.0" layoutY="210.0"
                        prefHeight="26.0" prefWidth="215.0"
                        text="Gestionar métodos de pago"
                        onAction="#onGestionPago"
                        style="-fx-background-color: transparent;
                               -fx-text-fill: white;
                               -fx-border-color: transparent;" />
            </children>
        </AnchorPane>
    </left>

    <center>
        <AnchorPane prefHeight="600.0" prefWidth="540.0"
                    BorderPane.alignment="CENTER">
            <children>
                <Label layoutX="30.0" layoutY="30.0"
                       text="Configuración del empresario">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>

                <Label layoutX="30.0" layoutY="70.0"
                       text="Seleccione una opción en el menú de la izquierda para modificar sus datos de usuario, emprendimiento o métodos de pago."
                       wrapText="true"
                       prefWidth="480.0" />
            </children>
        </AnchorPane>
    </center>
</BorderPane>