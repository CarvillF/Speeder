<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ConfiguracionSucursalesController">

    <left>
        <AnchorPane prefHeight="600.0" prefWidth="220.0" style="-fx-background-color: linear-gradient(to bottom, #20273E, #263F73);" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="btnVolver" layoutX="20.0" layoutY="20.0" onAction="#onVolverConfiguracion" prefHeight="30.0" prefWidth="100.0" style="-fx-background-radius: 18;                                -fx-background-color: transparent;                                -fx-text-fill: #f9fafb;                                -fx-border-color: transparent;                                -fx-focus-color: transparent;                                -fx-faint-focus-color: transparent;" text="⮐  Volver" />

                <Label layoutX="32.0" layoutY="90.0" text="Sucursales" textFill="WHITE">
                    <font>
                        <Font name="Arial Black" size="20.0" />
                    </font>
                </Label>

                <Label layoutX="16.0" layoutY="133.0" text="Gestiona las sucursales de tu compañía" textFill="#d0d8ff">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>
    </left>

    <center>
        <AnchorPane prefHeight="600.0" prefWidth="580.0" style="-fx-background-color: linear-gradient(to bottom right, #020617, #0b1120);" BorderPane.alignment="CENTER">
            <children>
                <VBox alignment="TOP_CENTER" layoutX="20.0" layoutY="20.0" prefWidth="560.0" spacing="16.0" style="-fx-background-color: rgba(15,23,42,0.96);                              -fx-background-radius: 18;                              -fx-padding: 18;">
                    <children>

                        <Label text="Configuración de sucursales" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>

                        <Label text="Administra las direcciones de las sucursales y su estado activo." textFill="#9ca3af">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Label>

                        <Separator />

                        <ScrollPane fitToWidth="true" hbarPolicy="AS_NEEDED" prefHeight="260.0" prefWidth="540.0" style="-fx-background-color: transparent;                                            -fx-background-insets: 0;" vbarPolicy="AS_NEEDED">
                            <content>
                                <TableView fx:id="tableSucursales" prefHeight="260.0" prefWidth="540.0" style="-fx-background-color: transparent;                                                   -fx-control-inner-background: #020617;                                                   -fx-background-radius: 12;                                                   -fx-border-radius: 12;                                                   -fx-border-color: rgba(148,163,184,0.45);                                                   -fx-border-width: 1;">
                                    <columns>
                                        <TableColumn fx:id="colRuc" prefWidth="180.0" text="RUC Compañía" />
                                        <TableColumn fx:id="colDireccion" prefWidth="320.0" text="Dirección" />
                                        <TableColumn fx:id="colActiva" prefWidth="80.0" text="Activa" />
                                    </columns>
                                </TableView>
                            </content>
                        </ScrollPane>

                        <GridPane hgap="12.0" vgap="8.0">
                            <columnConstraints>
                                <ColumnConstraints halignment="RIGHT" prefWidth="130.0" />
                                <ColumnConstraints prefWidth="250.0" />
                                <ColumnConstraints halignment="RIGHT" prefWidth="130.0" />
                                <ColumnConstraints prefWidth="250.0" />
                            </columnConstraints>

                            <rowConstraints>
                                <RowConstraints prefHeight="30.0" />
                                <RowConstraints prefHeight="30.0" />
                                <RowConstraints prefHeight="30.0" />
                                <RowConstraints prefHeight="30.0" />
                                <RowConstraints prefHeight="30.0" />
                                <RowConstraints prefHeight="30.0" />
                            </rowConstraints>

                            <children>
                                <Label text="RUC compañía:" textFill="#e5e7eb" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                <TextField fx:id="tfRuc" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                                <Label text="Activa:" textFill="#e5e7eb" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                                <CheckBox fx:id="chkActiva" GridPane.columnIndex="3" GridPane.rowIndex="0" />

                                <Label text="Ciudad:" textFill="#e5e7eb" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                <ChoiceBox fx:id="cbCiudad" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                <Label text="Calle principal:" textFill="#e5e7eb" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                <TextField fx:id="tfCallePrincipal" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                                <Label text="Calle secundaria:" textFill="#e5e7eb" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                                <TextField fx:id="tfCalleSecundaria" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                                <Label text="Número edificación:" textFill="#e5e7eb" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                                <TextField fx:id="tfNumeroEdificacion" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                                <Label text="Detalle:" textFill="#e5e7eb" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                                <TextField fx:id="tfDetalleDireccion" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                                <Button fx:id="btnAgregarSucursal" onAction="#onAgregarSucursal" style="-fx-background-radius: 18;                                                -fx-background-color: #22c55e;                                                -fx-text-fill: white;                                                -fx-border-color: transparent;" text="Agregar sucursal" GridPane.columnIndex="3" GridPane.rowIndex="3" />

                                <Button fx:id="btnGuardarSucursal" onAction="#onGuardarSucursal" style="-fx-background-radius: 18;                                                -fx-background-color: #3b82f6;                                                -fx-text-fill: white;                                                -fx-border-color: transparent;" text="Guardar cambios" GridPane.columnIndex="3" GridPane.rowIndex="4" />

                                <Button fx:id="btnEliminarSucursal" onAction="#onEliminarSucursal" style="-fx-background-radius: 18;                                                -fx-background-color: #ef4444;                                                -fx-text-fill: white;                                                -fx-border-color: transparent;" text="Eliminar sucursal" GridPane.columnIndex="3" GridPane.rowIndex="5" />
                            </children>
                        </GridPane>

                    </children>
                </VBox>
            </children>
        </AnchorPane>
    </center>
</BorderPane>
