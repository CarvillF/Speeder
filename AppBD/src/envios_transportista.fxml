<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="EnviosTransportistaController"
            prefHeight="600.0" prefWidth="800.0">

    <left>
        <AnchorPane prefHeight="600.0"
                    prefWidth="180.0"
                    style="-fx-background-color: #263F73;"
                    BorderPane.alignment="CENTER">
            <children>

                <Button fx:id="btnVolverMenu"
                        layoutX="20.0" layoutY="20.0"
                        prefWidth="80.0" prefHeight="26.0"
                        text="Volver"
                        onAction="#onVolverMenuTransportista"
                        style="-fx-background-color: transparent;
                               -fx-text-fill: white;
                               -fx-border-color: transparent;" />

                <Label layoutX="30.0" layoutY="70.0"
                       text="Envíos asignados"
                       textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                </Label>

            </children>
        </AnchorPane>
    </left>

    <center>
        <AnchorPane prefHeight="600.0" prefWidth="620.0" BorderPane.alignment="CENTER">
            <children>

                <Label layoutX="30.0" layoutY="20.0"
                       text="Envíos asignados al transportista">
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                </Label>

                <Label layoutX="30.0" layoutY="70.0" text="Estado:" />
                <ChoiceBox fx:id="cbFiltroEstado"
                           layoutX="90.0" layoutY="65.0"
                           prefWidth="160.0" />

                <Label layoutX="270.0" layoutY="70.0" text="Buscar:" />
                <TextField fx:id="tfBuscar"
                           layoutX="330.0" layoutY="65.0"
                           prefWidth="200.0"
                           promptText="Buscar por texto" />

                <Button fx:id="btnActualizar"
                        layoutX="30.0" layoutY="105.0"
                        prefWidth="120.0" prefHeight="26.0"
                        text="Actualizar lista"
                        onAction="#onActualizarLista" />

                <TableView fx:id="tableEnvios"
                           layoutX="30.0" layoutY="145.0"
                           prefWidth="560.0" prefHeight="330.0">
                    <columns>
                        <TableColumn fx:id="colIdEnvio"
                                     text="ID"
                                     prefWidth="60.0" />
                        <TableColumn fx:id="colOrigen"
                                     text="Origen"
                                     prefWidth="130.0" />
                        <TableColumn fx:id="colDestino"
                                     text="Destino"
                                     prefWidth="130.0" />
                        <TableColumn fx:id="colEstado"
                                     text="Estado"
                                     prefWidth="110.0" />
                        <TableColumn fx:id="colFechaInicio"
                                     text="Fecha inicio"
                                     prefWidth="130.0" />
                    </columns>
                </TableView>

                <Button fx:id="btnMarcarRecogido"
                        layoutX="30.0" layoutY="490.0"
                        prefWidth="160.0" prefHeight="26.0"
                        text="Marcar como recogido"
                        onAction="#onMarcarRecogido" />

                <Button fx:id="btnMarcarEntregado"
                        layoutX="210.0" layoutY="490.0"
                        prefWidth="170.0" prefHeight="26.0"
                        text="Marcar como entregado"
                        onAction="#onMarcarEntregado" />

            </children>
        </AnchorPane>
    </center>
</BorderPane>