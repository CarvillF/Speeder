<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="GestionEnviosController">

    <left>
        <AnchorPane prefHeight="600.0" prefWidth="180.0"
                    style="-fx-background-color: #263F73;"
                    BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="btnVolverMenu"
                        layoutX="20.0" layoutY="20.0"
                        onAction="#onVolverMenuUsuario"
                        prefHeight="26.0" prefWidth="80.0"
                        style="-fx-background-color: transparent;
                               -fx-text-fill: white;
                               -fx-border-color: transparent;"
                        text="Volver" />

                <Label layoutX="23.0" layoutY="87.0"
                       text="Gestión de envíos"
                       textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>
    </left>

    <center>
        <AnchorPane prefHeight="600.0" prefWidth="540.0"
                    BorderPane.alignment="CENTER">
            <children>

                <Label layoutX="30.0" layoutY="20.0"
                       text="Gestión de envíos del empresario">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>


                <Label layoutX="30.0" layoutY="70.0" text="Destino:" />
                <TextField fx:id="tfDestino"
                           layoutX="140.0" layoutY="65.0"
                           prefWidth="320.0"
                           promptText="Ciudad / dirección destino" />

                <Label layoutX="30.0" layoutY="110.0" text="Descripción paquete:" />
                <TextField fx:id="tfDescripcion"
                           layoutX="140.0" layoutY="105.0"
                           prefWidth="320.0"
                           promptText="Contenido del paquete" />

                <Label layoutX="30.0" layoutY="150.0" text="Tarifa estimada:" />
                <TextField fx:id="tfPrecio"
                           layoutX="140.0" layoutY="145.0"
                           prefWidth="120.0"
                           promptText="Ej: 5.99" />

                <Button fx:id="btnAgregarEnvio"
                        layoutX="30.0" layoutY="190.0"
                        onAction="#onSolicitarEnvio"
                        prefHeight="26.0" prefWidth="150.0"
                        text="Agregar envío" />

                <Button fx:id="btnCancelarEnvio"
                        layoutX="190.0" layoutY="190.0"
                        onAction="#onCancelarEnvio"
                        prefHeight="26.0" prefWidth="180.0"
                        text="Cancelar seleccionado" />

                <!-- Tabla de envíos -->
                <TableView fx:id="tableEnvios"
                           layoutX="30.0" layoutY="230.0"
                           prefHeight="330.0" prefWidth="540.0">
                    <columns>
                        <TableColumn fx:id="colId"
                                     prefWidth="60.0" text="ID" />
                        <TableColumn fx:id="colDestino"
                                     prefWidth="160.0" text="Destino" />
                        <TableColumn fx:id="colEstado"
                                     prefWidth="140.0" text="Estado" />
                        <TableColumn fx:id="colPrecio"
                                     prefWidth="180.0" text="Tarifa estimada" />
                    </columns>
                </TableView>

            </children>
        </AnchorPane>
    </center>
</BorderPane>