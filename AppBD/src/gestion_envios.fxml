<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GestionEnviosController">

    <left>
        <AnchorPane prefHeight="600.0" prefWidth="260.0" style="-fx-background-color: #263F73;" BorderPane.alignment="CENTER">
            <children>
                <Label layoutX="25.0" layoutY="60.0" text="Menú de gestión de envíos" textFill="WHITE">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>

                <Button fx:id="btnVerEnvios" layoutX="20.0" layoutY="120.0" mnemonicParsing="false" onAction="#onVerEnvios" prefHeight="26.0" prefWidth="220.0" style="-fx-background-color: transparent;                                -fx-text-fill: white;                                -fx-border-color: transparent;" text="Ver mis envíos" />

                <Button fx:id="btnSolicitarEnvio" layoutX="20.0" layoutY="165.0" mnemonicParsing="false" onAction="#onSolicitarEnvio" prefHeight="26.0" prefWidth="220.0" style="-fx-background-color: transparent;                                -fx-text-fill: white;                                -fx-border-color: transparent;" text="Solicitar nuevo envío" />

                <Button fx:id="btnCancelarEnvio" layoutX="20.0" layoutY="210.0" mnemonicParsing="false" onAction="#onCancelarEnvio" prefHeight="26.0" prefWidth="220.0" style="-fx-background-color: transparent;                                -fx-text-fill: white;                                -fx-border-color: transparent;" text="Cancelar envío" />

                <Button fx:id="btnEditarUbicacion" layoutX="20.0" layoutY="255.0" mnemonicParsing="false" onAction="#onEditarUbicacion" prefHeight="26.0" prefWidth="220.0" style="-fx-background-color: transparent;                                -fx-text-fill: white;                                -fx-border-color: transparent;" text="Editar ubicación de envío" />

                <Button fx:id="btnVolverMenu" layoutX="20.0" layoutY="20.0" mnemonicParsing="false" onAction="#onVolverMenuUsuario" style="-fx-background-color: transparent;                                -fx-text-fill: white;                                -fx-border-color: transparent;" text="Volver" />
            </children>
        </AnchorPane>
    </left>

    <center>
        <AnchorPane prefHeight="600.0" prefWidth="540.0" BorderPane.alignment="CENTER">
            <children>
                <Label layoutX="30.0" layoutY="20.0" text="Gestión de envíos">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>

                <TableView fx:id="tableEnvios" layoutX="30.0" layoutY="60.0" prefHeight="400.0" prefWidth="480.0">
                    <columns>
                        <TableColumn fx:id="colId" prefWidth="60.0" text="ID" />
                        <TableColumn fx:id="colDestino" prefWidth="140.0" text="Destino" />
                        <TableColumn fx:id="colEstado" prefWidth="120.0" text="Estado" />
                        <TableColumn fx:id="colPrecio" prefWidth="160.0" text="Precio estimado" />
                    </columns>
                </TableView>
            </children>
        </AnchorPane>
    </center>
</BorderPane>
