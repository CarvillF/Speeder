<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="GestionEnviosController"
            style="-fx-background-color: #020617;">

    <left>
        <AnchorPane prefHeight="600.0" prefWidth="200.0"
                    style="-fx-background-color: linear-gradient(to bottom, #20273E, #263F73);"
                    BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="btnVolverMenu"
                        layoutX="20.0" layoutY="20.0"
                        prefHeight="30.0" prefWidth="100.0"
                        text="⮐  Volver"
                        onAction="#onVolverMenuUsuario"
                        style="-fx-background-color: transparent;
                               -fx-text-fill: white;
                               -fx-border-color: transparent;
                               -fx-focus-color: transparent;
                               -fx-faint-focus-color: transparent;" />

                <Label layoutX="30.0" layoutY="90.0"
                       text="Empresario"
                       textFill="WHITE">
                    <font>
                        <Font name="Arial Black" size="20.0" />
                    </font>
                </Label>

                <Label layoutX="30.0" layoutY="120.0"
                       text="Crear nuevo envío"
                       textFill="#E5E7EB">
                    <font>
                        <Font size="13.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>
    </left>

    <center>
        <AnchorPane prefHeight="600.0" prefWidth="600.0"
                    style="-fx-background-color: linear-gradient(to bottom right, #020617, #0b1120);"
                    BorderPane.alignment="CENTER">
            <children>
                <ScrollPane fitToWidth="true" fitToHeight="true"
                            layoutX="0.0" layoutY="0.0"
                            prefHeight="600.0" prefWidth="600.0"
                            hbarPolicy="NEVER"
                            style="-fx-background: transparent;
                                   -fx-background-color: transparent;">
                    <content>
                        <VBox spacing="18.0" prefWidth="580.0"
                              style="-fx-padding: 20;
                                     -fx-background-color: transparent;">
                            <children>

                                <VBox spacing="4.0"
                                      style="-fx-background-color: rgba(15,23,42,0.95);
                                             -fx-background-radius: 18;
                                             -fx-padding: 18;">
                                    <children>
                                        <Label text="Crear nuevo envío" textFill="WHITE">
                                            <font>
                                                <Font name="System Bold" size="20.0" />
                                            </font>
                                        </Label>
                                        <Label text="Completa los datos del remitente, dirección de entrega y paquete."
                                               textFill="#9CA3AF">
                                            <font>
                                                <Font size="12.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </VBox>

                                <VBox spacing="10.0"
                                      style="-fx-background-color: rgba(15,23,42,0.95);
                                             -fx-background-radius: 18;
                                             -fx-padding: 18;">
                                    <children>
                                        <Label text="Compañía que envía el paquete"
                                               textFill="WHITE">
                                            <font>
                                                <Font name="System Bold" size="14.0" />
                                            </font>
                                        </Label>

                                        <GridPane hgap="12.0" vgap="10.0">
                                            <columnConstraints>
                                                <ColumnConstraints prefWidth="140.0" />
                                                <ColumnConstraints prefWidth="320.0" />
                                            </columnConstraints>
                                            <children>
                                                <Label text="Compañía:"
                                                       GridPane.rowIndex="0" GridPane.columnIndex="0"
                                                       textFill="#E5E7EB" />
                                                <ComboBox fx:id="cbCompania"
                                                          GridPane.rowIndex="0" GridPane.columnIndex="1"
                                                          prefWidth="300.0" />

                                                <Label text="Sucursal de la compañía:"
                                                       GridPane.rowIndex="1" GridPane.columnIndex="0"
                                                       textFill="#E5E7EB" />
                                                <ComboBox fx:id="cbSucursal"
                                                          GridPane.rowIndex="1" GridPane.columnIndex="1"
                                                          prefWidth="300.0" />
                                            </children>
                                        </GridPane>
                                    </children>
                                </VBox>

                                <VBox spacing="10.0"
                                      style="-fx-background-color: rgba(15,23,42,0.95);
                                             -fx-background-radius: 18;
                                             -fx-padding: 18;">
                                    <children>
                                        <Label text="Dirección de entrega"
                                               textFill="WHITE">
                                            <font>
                                                <Font name="System Bold" size="14.0" />
                                            </font>
                                        </Label>

                                        <GridPane hgap="12.0" vgap="10.0">
                                            <columnConstraints>
                                                <ColumnConstraints prefWidth="150.0" />
                                                <ColumnConstraints prefWidth="320.0" />
                                            </columnConstraints>
                                            <children>
                                                <Label text="Ciudad:"
                                                       GridPane.rowIndex="0" GridPane.columnIndex="0"
                                                       textFill="#E5E7EB" />
                                                <ComboBox fx:id="cbCiudad"
                                                          GridPane.rowIndex="0" GridPane.columnIndex="1"
                                                          prefWidth="240.0" />

                                                <Label text="Calle principal:"
                                                       GridPane.rowIndex="1" GridPane.columnIndex="0"
                                                       textFill="#E5E7EB" />
                                                <TextField fx:id="tfCallePrincipal"
                                                           GridPane.rowIndex="1" GridPane.columnIndex="1"
                                                           promptText="Ej: Av. de los Shyris" />

                                                <Label text="Calle secundaria:"
                                                       GridPane.rowIndex="2" GridPane.columnIndex="0"
                                                       textFill="#E5E7EB" />
                                                <TextField fx:id="tfCalleSecundaria"
                                                           GridPane.rowIndex="2" GridPane.columnIndex="1"
                                                           promptText="Ej: Calle Japón" />

                                                <Label text="Número de edificación:"
                                                       GridPane.rowIndex="3" GridPane.columnIndex="0"
                                                       textFill="#E5E7EB" />
                                                <TextField fx:id="tfNumeroEdificacion"
                                                           GridPane.rowIndex="3" GridPane.columnIndex="1"
                                                           prefWidth="120.0"
                                                           promptText="Ej: N25-30" />

                                                <Label text="Detalle:"
                                                       GridPane.rowIndex="4" GridPane.columnIndex="0"
                                                       textFill="#E5E7EB" />
                                                <TextField fx:id="tfDetalleDireccion"
                                                           GridPane.rowIndex="4" GridPane.columnIndex="1"
                                                           promptText="Ej: Departamento 302, torre B" />
                                            </children>
                                        </GridPane>
                                    </children>
                                </VBox>

                                <VBox spacing="10.0"
                                      style="-fx-background-color: rgba(15,23,42,0.95);
                                             -fx-background-radius: 18;
                                             -fx-padding: 18;">
                                    <children>
                                        <Label text="Paquete"
                                               textFill="WHITE">
                                            <font>
                                                <Font name="System Bold" size="14.0" />
                                            </font>
                                        </Label>

                                        <GridPane hgap="12.0" vgap="10.0">
                                            <columnConstraints>
                                                <ColumnConstraints prefWidth="150.0" />
                                                <ColumnConstraints prefWidth="320.0" />
                                            </columnConstraints>
                                            <children>
                                                <Label text="Descripción:"
                                                       GridPane.rowIndex="0" GridPane.columnIndex="0"
                                                       textFill="#E5E7EB" />
                                                <TextField fx:id="tfDescripcionPaquete"
                                                           GridPane.rowIndex="0" GridPane.columnIndex="1"
                                                           promptText="Ej: Caja con ropa, documentos..." />

                                                <Label text="Dimensiones (cm):"
                                                       GridPane.rowIndex="1" GridPane.columnIndex="0"
                                                       textFill="#E5E7EB" />
                                                <HBox spacing="8.0"
                                                      GridPane.rowIndex="1" GridPane.columnIndex="1">
                                                    <children>
                                                        <Label text="X:" textFill="#E5E7EB" />
                                                        <TextField fx:id="tfDimX" prefWidth="60.0" />
                                                        <Label text="Y:" textFill="#E5E7EB" />
                                                        <TextField fx:id="tfDimY" prefWidth="60.0" />
                                                        <Label text="Z:" textFill="#E5E7EB" />
                                                        <TextField fx:id="tfDimZ" prefWidth="60.0" />
                                                    </children>
                                                </HBox>

                                                <Label text="Peso (kg):"
                                                       GridPane.rowIndex="2" GridPane.columnIndex="0"
                                                       textFill="#E5E7EB" />
                                                <TextField fx:id="tfPeso"
                                                           GridPane.rowIndex="2" GridPane.columnIndex="1"
                                                           prefWidth="120.0"
                                                           promptText="Ej: 2.50" />

                                                <Label text="Tipo de paquete:"
                                                       GridPane.rowIndex="3" GridPane.columnIndex="0"
                                                       textFill="#E5E7EB" />
                                                <ComboBox fx:id="cbTipoPaquete"
                                                          GridPane.rowIndex="3" GridPane.columnIndex="1"
                                                          prefWidth="200.0" />

                                                <Label text="Observaciones:"
                                                       GridPane.rowIndex="4" GridPane.columnIndex="0"
                                                       textFill="#E5E7EB" />
                                                <TextArea fx:id="taObservaciones"
                                                          GridPane.rowIndex="4" GridPane.columnIndex="1"
                                                          prefHeight="80.0"
                                                          promptText="Instrucciones especiales, horario de entrega, etc." />
                                            </children>
                                        </GridPane>
                                    </children>
                                </VBox>

                                <VBox spacing="10.0"
                                      style="-fx-background-color: rgba(15,23,42,0.95);
                                             -fx-background-radius: 18;
                                             -fx-padding: 18;">
                                    <children>
                                        <HBox spacing="10.0">
                                            <children>
                                                <Button fx:id="btnOpcionesDisponibles"
                                                        prefWidth="200.0" prefHeight="30.0"
                                                        text="Opciones disponibles"
                                                        onAction="#onOpcionesDisponibles" />
                                                <Label text="Transportistas disponibles:"
                                                       textFill="#E5E7EB" />
                                            </children>
                                        </HBox>

                                        <ListView fx:id="listTransportistas"
                                                  prefHeight="150.0" minHeight="150.0"
                                                  maxHeight="200.0"
                                                  VBox.vgrow="ALWAYS"
                                                  style="-fx-background-color: rgba(15,23,42,0.6);
                                                         -fx-control-inner-background: #020617;
                                                         -fx-background-radius: 10;
                                                         -fx-border-radius: 10;
                                                         -fx-border-color: #38bdf8;" />

                                        <Button fx:id="btnConfirmarEnvio"
                                                prefWidth="220.0" prefHeight="32.0"
                                                text="Confirmar envío"
                                                onAction="#onConfirmarEnvio" />
                                    </children>
                                </VBox>

                            </children>
                        </VBox>
                    </content>
                </ScrollPane>
            </children>
        </AnchorPane>
    </center>

</BorderPane>