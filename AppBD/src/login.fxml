<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="loginController"
            prefHeight="500.0" prefWidth="900.0"
            style="-fx-background-color: linear-gradient(to right, #0f172a, #1f2933);">

    <!-- PANEL IZQUIERDO: branding -->
    <left>
        <AnchorPane prefHeight="500.0" prefWidth="360.0"
                    style="-fx-background-color: transparent;"
                    BorderPane.alignment="CENTER">
            <children>
                <!-- Tarjeta oscura con shadow -->
                <AnchorPane layoutX="30.0" layoutY="40.0"
                            prefHeight="420.0" prefWidth="300.0"
                            style="-fx-background-color: rgba(15,23,42,0.85);
                                   -fx-background-radius: 20;
                                   -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.45), 25, 0.2, 0, 8);">

                    <children>
                        <Label layoutX="40.0" layoutY="40.0"
                               text="Speeder"
                               textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="32.0" />
                            </font>
                        </Label>

                        <Label layoutX="40.0" layoutY="85.0"
                               text="Gestión de envíos ágil y sencilla."
                               textFill="#a5b4fc">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>

                        <ImageView fitHeight="230.0" fitWidth="220.0"
                                   layoutX="40.0" layoutY="130.0"
                                   pickOnBounds="true" preserveRatio="true">
                            <image>
                                <!-- Usa la misma imagen que ya tenías -->
                                <Image url="@img/1f4e6.png" />
                            </image>
                        </ImageView>

                        <Label layoutX="40.0" layoutY="370.0"
                               text="Inicia sesión para continuar"
                               textFill="#e5e7eb">
                            <font>
                                <Font size="13.0" />
                            </font>
                        </Label>
                    </children>
                </AnchorPane>
            </children>
        </AnchorPane>
    </left>

    <!-- PANEL DERECHO: formulario de login -->
    <center>
        <AnchorPane prefHeight="500.0" prefWidth="540.0"
                    BorderPane.alignment="CENTER">
            <children>

                <!-- Tarjeta blanca del formulario -->
                <AnchorPane layoutX="80.0" layoutY="60.0"
                            prefHeight="380.0" prefWidth="380.0"
                            style="-fx-background-color: #ffffff;
                                   -fx-background-radius: 18;
                                   -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.20), 18, 0.15, 0, 6);">

                    <children>
                        <Label layoutX="40.0" layoutY="30.0"
                               text="Iniciar sesión">
                            <font>
                                <Font name="System Bold" size="22.0" />
                            </font>
                        </Label>

                        <Label layoutX="40.0" layoutY="65.0"
                               text="Accede con tu usuario y contraseña."
                               textFill="#6b7280">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Label>

                        <!-- Usuario -->
                        <Label layoutX="40.0" layoutY="110.0"
                               text="Usuario">
                            <font>
                                <Font size="13.0" />
                            </font>
                        </Label>
                        <TextField fx:id="usernameTextField"
                                   layoutX="40.0" layoutY="130.0"
                                   prefWidth="300.0" prefHeight="32.0"
                                   promptText="Ingresa tu usuario"
                                   style="-fx-background-radius: 8;
                                          -fx-border-radius: 8;
                                          -fx-border-color: #d1d5db;" />

                        <Label layoutX="40.0" layoutY="175.0"
                               text="Contraseña">
                            <font>
                                <Font size="13.0" />
                            </font>
                        </Label>
                        <PasswordField fx:id="passwordPasswordField"
                                       layoutX="40.0" layoutY="195.0"
                                       prefWidth="300.0" prefHeight="32.0"
                                       promptText="Ingresa tu contraseña"
                                       style="-fx-background-radius: 8;
                                              -fx-border-radius: 8;
                                              -fx-border-color: #d1d5db;" />

                        <!-- Botón login -->
                        <Button fx:id="loginButton"
                                layoutX="40.0" layoutY="245.0"
                                mnemonicParsing="false"
                                onAction="#onLoginClicked"
                                prefHeight="32.0" prefWidth="300.0"
                                text="Iniciar sesión"
                                textFill="WHITE"
                                style="-fx-background-color: linear-gradient(to right,#2563eb,#1d4ed8);
                                       -fx-background-radius: 999;
                                       -fx-font-weight: bold;" />

                        <!-- Mensaje de error/estado -->
                        <Label fx:id="messageLabel"
                               layoutX="40.0" layoutY="283.0"
                               prefHeight="20.0" prefWidth="300.0"
                               textFill="#b91c1c" />

                        <Button fx:id="registerButton"
                                layoutX="40.0" layoutY="310.0"
                                mnemonicParsing="false"
                                onAction="#onRegisterClicked"
                                prefHeight="26.0" prefWidth="300.0"
                                text="Registrarse como Transportista"
                                textFill="#1f2933"
                                style="-fx-background-color: transparent;
                                       -fx-border-color: #d1d5db;
                                       -fx-border-radius: 999;
                                       -fx-background-radius: 999;" />

                        <Button fx:id="registerButton2"
                                layoutX="40.0" layoutY="344.0"
                                mnemonicParsing="false"
                                onAction="#onRegisterClicked2"
                                prefHeight="26.0" prefWidth="300.0"
                                text="Registrarse como Empresario"
                                textFill="#1f2933"
                                style="-fx-background-color: transparent;
                                       -fx-border-color: #d1d5db;
                                       -fx-border-radius: 999;
                                       -fx-background-radius: 999;" />

                    </children>
                </AnchorPane>
            </children>
        </AnchorPane>
    </center>
</BorderPane>