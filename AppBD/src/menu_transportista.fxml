<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="MenuTransportistaController">

    <left>
        <AnchorPane prefHeight="600.0" prefWidth="260.0"
                    style="-fx-background-color:#263F73;"
                    BorderPane.alignment="CENTER">
            <children>

                <Label layoutX="30.0" layoutY="40.0"
                       text="Menú transportista"
                       textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>

                <Button fx:id="btnEnviosAsignados"
                        layoutX="22.0" layoutY="110.0"
                        prefHeight="25.0" prefWidth="215.0"
                        text="Envíos asignados"
                        onAction="#onEnviosAsignados"
                        style="-fx-background-color: transparent;
                               -fx-text-fill: white;
                               -fx-border-color: transparent;" />

                <Button fx:id="btnMisVehiculos"
                        layoutX="22.0" layoutY="150.0"
                        prefHeight="25.0" prefWidth="215.0"
                        text="Mis vehículos"
                        onAction="#onMisVehiculos"
                        style="-fx-background-color: transparent;
                               -fx-text-fill: white;
                               -fx-border-color: transparent;" />

                <Button fx:id="btnLogout"
                        layoutX="22.0" layoutY="520.0"
                        prefHeight="25.0" prefWidth="215.0"
                        text="Cerrar sesión"
                        onAction="#onLogout"
                        style="-fx-background-color: transparent;
                               -fx-text-fill: white;
                               -fx-border-color: transparent;" />
            </children>
        </AnchorPane>
    </left>

    <center>
        <AnchorPane prefHeight="600.0" prefWidth="540.0"
                    BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="sectionTitleLabel"
                       layoutX="30.0" layoutY="40.0"
                       text="Menú transportista">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>

                <Label fx:id="sectionDescriptionLabel"
                       layoutX="30.0" layoutY="80.0"
                       text="Seleccione una opción de la barra izquierda para continuar."/>
            </children>
        </AnchorPane>
    </center>
</BorderPane>