<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="RevisarEnviosController"
            prefHeight="600.0" prefWidth="800.0">

    <!-- Columna izquierda vacía -->
    <left>
        <AnchorPane prefHeight="600.0" prefWidth="220.0"
                    BorderPane.alignment="CENTER" />
    </left>

    <!-- Centro: título + scroll con tarjetas + botón Gestionar envíos -->
    <center>
        <AnchorPane prefHeight="600.0" prefWidth="580.0"
                    BorderPane.alignment="CENTER">
            <children>

                <Label layoutX="30.0" layoutY="20.0"
                       text="Envíos actuales">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>

                <!-- Scroll con un VBox vacío donde se agregarán las tarjetas -->
                <ScrollPane layoutX="30.0" layoutY="60.0"
                            prefWidth="520.0" prefHeight="430.0"
                            fitToWidth="true">
                    <content>
                        <VBox fx:id="enviosContainer"
                              spacing="15.0">
                            <padding>
                                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
                            </padding>
                        </VBox>
                    </content>
                </ScrollPane>

                <!-- Botón para ir a la pantalla Gestión de envíos -->
                <Button fx:id="btnGestionarEnvios"
                        layoutX="420.0" layoutY="540.0"
                        prefWidth="130.0" prefHeight="28.0"
                        mnemonicParsing="false"
                        text="Gestionar envíos"
                        onAction="#onGestionarEnvios" />
            </children>
        </AnchorPane>
    </center>
</BorderPane>