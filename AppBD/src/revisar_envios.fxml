<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="RevisarEnviosController">

    <left>
        <AnchorPane prefHeight="600.0" prefWidth="200.0"
                    style="-fx-background-color: linear-gradient(to bottom, #20273E, #263F73);"
                    BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="btnVolver"
                        layoutX="20.0" layoutY="20.0"
                        onAction="#onVolverMenuUsuario"
                        prefHeight="30.0" prefWidth="90.0"
                        style="-fx-background-color: transparent;
                               -fx-text-fill: white;
                               -fx-border-color: transparent;
                               -fx-focus-color: transparent;
                               -fx-faint-focus-color: transparent;"
                        text="⮐  Volver" />

                <Label layoutX="30.0" layoutY="90.0"
                       text="Envios"
                       textFill="WHITE">
                    <font>
                        <Font name="Arial Black" size="20.0" />
                    </font>
                </Label>

                <Label layoutX="30.0" layoutY="120.0"
                       text="Resumen de todos tus envíos"
                       textFill="#d0d8ff">
                    <font>
                        <Font name="System" size="12.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>
    </left>

    <center>
        <AnchorPane prefHeight="600.0" prefWidth="600.0"
                    style="-fx-background-color: linear-gradient(to bottom right, #0f172a, #020617);"
                    BorderPane.alignment="CENTER">
            <children>
                <VBox layoutX="20.0" layoutY="20.0"
                      prefWidth="560.0" spacing="10.0"
                      style="-fx-background-color: rgba(15,23,42,0.92);
                             -fx-background-radius: 18;
                             -fx-padding: 18;">
                    <children>
                        <Label text="Listado de envíos"
                               textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>

                        <Label text="Mostrando datos de RUC, direcciones, paquete, fechas, tarifa y estado."
                               textFill="#9ca3af">
                            <font>
                                <Font name="System" size="12.0" />
                            </font>
                        </Label>

                        <TableView fx:id="tableEnvios"
                                   prefHeight="440.0" prefWidth="560.0"
                                   style="-fx-background-color: transparent;
                                          -fx-control-inner-background: #020617;
                                          -fx-background-radius: 12;
                                          -fx-border-radius: 12;
                                          -fx-border-color: rgba(148,163,184,0.45);
                                          -fx-border-width: 1;">
                            <columns>
                                <TableColumn fx:id="colRucEmpresa" prefWidth="120.0" text="RUC empresa" />

                                <TableColumn fx:id="colEnvioCiudad" prefWidth="110.0" text="Ciudad envío" />
                                <TableColumn fx:id="colEnvioCallePrincipal" prefWidth="130.0" text="Calle princ. envío" />
                                <TableColumn fx:id="colEnvioCalleSecundaria" prefWidth="130.0" text="Calle sec. envío" />

                                <TableColumn fx:id="colEntregaCiudad" prefWidth="110.0" text="Ciudad entrega" />
                                <TableColumn fx:id="colEntregaCallePrincipal" prefWidth="140.0" text="Calle princ. entrega" />
                                <TableColumn fx:id="colEntregaCalleSecundaria" prefWidth="140.0" text="Calle sec. entrega" />

                                <TableColumn fx:id="colPaquete" prefWidth="120.0" text="Paquete" />

                                <TableColumn fx:id="colFechaHoraInicio" prefWidth="150.0" text="Fecha/hora inicio" />
                                <TableColumn fx:id="colFechaHoraEstimadaEntrega" prefWidth="180.0" text="Fecha/hora est. entrega" />

                                <TableColumn fx:id="colTarifa" prefWidth="80.0" text="Tarifa" />
                                <TableColumn fx:id="colEstado" prefWidth="90.0" text="Estado" />
                            </columns>
                        </TableView>

                        <Button fx:id="btnCancelarEnvio"
                                text="Cancelar envío seleccionado"
                                onAction="#onCancelarEnvio"
                                prefWidth="220.0"
                                style="-fx-background-radius: 16;
                                       -fx-background-color: #ef4444;
                                       -fx-text-fill: white;
                                       -fx-font-weight: bold;" />
                    </children>
                </VBox>
            </children>
        </AnchorPane>
    </center>

</BorderPane>