<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="RevisarEnviosController"
            prefHeight="600.0" prefWidth="800.0">

    <left>
        <AnchorPane prefHeight="600.0" prefWidth="260.0"
                    style="-fx-background-color: #263F73;"
                    BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="btnVolverMenu"
                        layoutX="20.0" layoutY="20.0"
                        text="Volver"
                        onAction="#onVolverMenuUsuario"
                        style="-fx-background-color: transparent;
                               -fx-text-fill: white;
                               -fx-border-color: transparent;" />

                <Label layoutX="30.0" layoutY="70.0"
                       text="Revisar envíos"
                       textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>
    </left>

    <center>
        <AnchorPane prefHeight="600.0" prefWidth="540.0"
                    BorderPane.alignment="CENTER">
            <children>

                <Label layoutX="30.0" layoutY="20.0"
                       text="Envíos actuales">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>

                <Label layoutX="30.0" layoutY="70.0"
                       text="Estado:" />

                <ChoiceBox fx:id="cbFiltroEstado"
                           layoutX="90.0" layoutY="66.0"
                           prefWidth="150.0" />

                <TextField fx:id="tfBuscar"
                           layoutX="260.0" layoutY="66.0"
                           prefWidth="230.0"
                           promptText="Buscar por destino, origen..." />

                <TableView fx:id="tableEnvios"
                           layoutX="30.0" layoutY="110.0"
                           prefWidth="460.0" prefHeight="360.0">
                    <columns>
                        <TableColumn fx:id="colIdEnvio"
                                     text="ID envío" prefWidth="80.0" />
                        <TableColumn fx:id="colOrigen"
                                     text="Origen" prefWidth="100.0" />
                        <TableColumn fx:id="colDestino"
                                     text="Destino" prefWidth="100.0" />
                        <TableColumn fx:id="colEstado"
                                     text="Estado" prefWidth="90.0" />
                        <TableColumn fx:id="colFechaInicio"
                                     text="Fecha inicio" prefWidth="90.0" />
                    </columns>
                </TableView>

                <Button fx:id="btnCancelarEnvio"
                        layoutX="30.0" layoutY="490.0"
                        prefWidth="190.0" prefHeight="28.0"
                        text="Cancelar envío seleccionado"
                        onAction="#onCancelarEnvio" />

            </children>
        </AnchorPane>
    </center>
</BorderPane>