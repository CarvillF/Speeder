<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="SeleccionRolDemoController">

    <left>
        <AnchorPane prefHeight="400.0" prefWidth="260.0"
                    style="-fx-background-color: #263F73;"
                    BorderPane.alignment="CENTER">
            <children>
                <Label layoutX="80.0" layoutY="40.0"
                       text="Speeder"
                       textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="28.0" />
                    </font>
                </Label>

                <Label layoutX="50.0" layoutY="85.0"
                       text="Modo demo"
                       textFill="#d0d8ff">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>

                <ImageView fitHeight="220.0" fitWidth="220.0"
                           layoutX="25.0" layoutY="140.0"
                           pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@img/1f4e6.png" />
                    </image>
                </ImageView>
            </children>
        </AnchorPane>
    </left>

    <center>
        <AnchorPane prefHeight="400.0" prefWidth="340.0"
                    BorderPane.alignment="CENTER">
            <children>

                <Label layoutX="60.0" layoutY="40.0"
                       text="Elija un rol para la demo">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>

                <Button fx:id="btnEmpresarioDemo"
                        layoutX="60.0" layoutY="100.0"
                        prefWidth="220.0" prefHeight="32.0"
                        text="Entrar como Empresario (demo)"
                        onAction="#onEmpresarioDemo"
                        style="-fx-background-color: #263F73;
                               -fx-text-fill: white;
                               -fx-background-radius: 18;" />

                <Button fx:id="btnTransportistaDemo"
                        layoutX="60.0" layoutY="150.0"
                        prefWidth="220.0" prefHeight="32.0"
                        text="Entrar como Transportista (demo)"
                        onAction="#onTransportistaDemo"
                        style="-fx-background-color: #263F73;
                               -fx-text-fill: white;
                               -fx-background-radius: 18;" />

                <Button fx:id="btnAdminDemo"
                        layoutX="60.0" layoutY="200.0"
                        prefWidth="220.0" prefHeight="32.0"
                        text="Entrar como Administrador (demo)"
                        onAction="#onAdminDemo"
                        style="-fx-background-color: #263F73;
                               -fx-text-fill: white;
                               -fx-background-radius: 18;" />

                <Button fx:id="btnVolverLogin"
                        layoutX="100.0" layoutY="260.0"
                        prefWidth="140.0" prefHeight="28.0"
                        text="Volver al login"
                        onAction="#onVolverLogin"
                        style="-fx-background-color: transparent;
                               -fx-border-color: #263F73;
                               -fx-text-fill: #263F73;
                               -fx-background-radius: 18;
                               -fx-border-radius: 18;" />

            </children>
        </AnchorPane>
    </center>

</BorderPane>