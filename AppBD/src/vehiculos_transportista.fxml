<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="VehiculosTransportistaController"
            prefHeight="600.0" prefWidth="800.0">

    <left>
        <AnchorPane prefHeight="600.0" prefWidth="180.0"
                    style="-fx-background-color: #263F73;"
                    BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="btnVolverMenu"
                        layoutX="20.0" layoutY="20.0"
                        prefHeight="26.0" prefWidth="80.0"
                        text="Volver"
                        onAction="#onVolverMenuTransportista"
                        style="-fx-background-color: transparent;
                               -fx-text-fill: white;
                               -fx-border-color: transparent;" />

                <Label layoutX="20.0" layoutY="70.0"
                       text="Mis vehículos"
                       textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>
    </left>

    <center>
        <AnchorPane prefHeight="600.0" prefWidth="620.0"
                    BorderPane.alignment="CENTER">
            <children>

                <Label layoutX="30.0" layoutY="20.0"
                       text="Gestión de vehículos">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>

                <Label layoutX="30.0" layoutY="70.0" text="Modelo:" />
                <TextField fx:id="tfModelo"
                           layoutX="110.0" layoutY="65.0"
                           prefWidth="200.0" />

                <Label layoutX="30.0" layoutY="110.0" text="Color:" />
                <TextField fx:id="tfColor"
                           layoutX="110.0" layoutY="105.0"
                           prefWidth="200.0" />

                <Label layoutX="30.0" layoutY="150.0" text="Placa:" />
                <TextField fx:id="tfPlaca"
                           layoutX="110.0" layoutY="145.0"
                           prefWidth="200.0" />

                <Button fx:id="btnAgregarVehiculo"
                        layoutX="340.0" layoutY="80.0"
                        prefHeight="26.0" prefWidth="160.0"
                        text="Agregar vehículo"
                        onAction="#onAgregarVehiculo" />

                <Button fx:id="btnEliminarVehiculo"
                        layoutX="340.0" layoutY="120.0"
                        prefHeight="26.0" prefWidth="160.0"
                        text="Eliminar seleccionado"
                        onAction="#onEliminarVehiculo" />

                <TableView fx:id="tableVehiculos"
                           layoutX="30.0" layoutY="210.0"
                           prefHeight="340.0" prefWidth="560.0">
                    <columns>
                        <TableColumn fx:id="colId"
                                     prefWidth="80.0"
                                     text="ID" />
                        <TableColumn fx:id="colModelo"
                                     prefWidth="180.0"
                                     text="Modelo" />
                        <TableColumn fx:id="colPlaca"
                                     prefWidth="140.0"
                                     text="Placa" />
                        <TableColumn fx:id="colColor"
                                     prefWidth="160.0"
                                     text="Color" />
                    </columns>
                </TableView>

            </children>
        </AnchorPane>
    </center>
</BorderPane>